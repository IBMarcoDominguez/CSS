body {
    background-color: DodgerBlue;
}

.box {
    display: block;
    position: relative;
    left: 50px;
    width: 100px;
    height: 100px;
    background-color: white;
    box-shadow: 1px 2px 2px rgba(0, 0, 0, 0.2);
    /*totate (20px) esta funcion rota el bloque de html en su propio eje*/
    /*translate (50px,10px) esta funcion modifica la coordenada del bloque de html en 'x' y 'y'*/
    /*scale (1,1) modifica la escala del bloque html*/
    transform: scale(0.9,0.9);
}

.box:hover {
    /*transform scale(1.05,1.05 ) OR ScaleX Crea una sensacion de crecimiento de bloque expontaneo al raton*/
    /*transform skewX skewy (25deg) crea una sencion de inclinacion al pasar el raton*/
    transform: skew(25deg, 10deg)
}
